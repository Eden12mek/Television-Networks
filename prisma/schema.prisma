// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Channel {
  id       Int       @id @default(autoincrement())
  name     String
  suspend  Boolean    @default(true)
  programs Program[]
}

model Program {
  id        Int       @id @default(autoincrement())
  video      String
  duration   Int
  title      String
  category  String
  type      String
  suspend  Boolean     @default(true)
  channelId Int
  channel   Channel   @relation(fields: [channelId], references: [id])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  moviesId  Int
  movies    Movies    @relation(fields: [moviesId], references: [id])
  favorites favorite[]
}

model Movies {
  id        Int       @id @default(autoincrement())
  title     String
  video     String
  categories Category[]
}

model User {
  id                Int       @id @default(autoincrement())
  username          String
  roles             Int
  password          String
  email             String
  phoneNum          Int
  imgUrl            String
  refreshToken      String
  stars             Int
  notificationCount Int
  lastNotified      DateTime

  favoredNumber     Int       @default(0)
  favoredBy         Json
  passwordResetHash String 
  
  suspended         Boolean
  favorites favorite[]
  histories history[]
}



model favorite {
  id        Int       @id @default(autoincrement())
  userId    Int
  categoryId Int
  user      User      @relation(fields: [userId], references: [id])
  category  Category  @relation(fields: [categoryId], references: [id])
}

model history {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}
